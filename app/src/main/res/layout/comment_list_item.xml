<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/comment_list_item_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/head"
            android:layout_gravity="center"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/comment_list_item_name"
                android:text="haley"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/comment_list_item_content"
                android:text="balsldfsfsdfsdfkjs;dfkja;sldkfja;lsdkfjasdjf;lasdkfja;ldksfj;alsdkjfkasdjf;laksdfj;laksdfj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/comment_list_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2016-10-13"

                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/like"
                    />
                <TextView
                    android:id="@+id/comment_list_item_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>