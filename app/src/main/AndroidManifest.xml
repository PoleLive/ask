<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.lawliex.ask">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".AskApp"
        android:allowBackup="true"
        android:icon="@mipmap/head"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".login.BeginActivity" />
        <activity android:name=".login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".question.list.QuestionListActivity"
            android:label="@string/title_activity_question_list"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".question.add.QuestionAddActivity" />
        <activity
            android:name=".question.detail.QuestionDetailActivity"
            android:launchMode="singleInstance" />
        <activity android:name=".answer.add.AnswerAddActivity" />
        <activity android:name=".answer.detail.AnswerDetailActivity" />
        <activity
            android:name=".profile.other.detail.UserInfoDetailActivity"
            android:launchMode="singleTask"
            />
        <activity android:name=".comment.CommentActivity" />
        <activity android:name=".answer.list_plus.QandAListActivity" />
        <activity android:name=".followers.FollowersActivity" />
        <activity
            android:name=".message.list.MessageListActivity"
            android:launchMode="singleTask"
            />
        <activity android:name=".message.add.MessageAddActivity" />
        <activity android:name=".message.detail.MessageDetailActivity" />
        <activity android:name=".following.FollowingActivity" />
        <activity android:name=".settings.SettingsActivity" />
        <activity android:name=".BaseActivity" />
        <activity
            android:name=".timeline.TimeLineActivity"
            android:label="@string/title_activity_time_line"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".discover.DiscoverActivity"
            android:launchMode="singleTask"
            android:label="@string/title_activity_discover"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".follow.FollowActivity"
            android:launchMode="singleTask"
            />
        <activity android:name=".question.simplelist.QuestionSimpleListActivity"></activity>
    </application>

</manifest>