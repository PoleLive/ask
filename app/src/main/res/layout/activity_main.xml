<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.lawliex.ask.admin.home.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/activity_main_admin_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="用户管理"
            android:gravity="center"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:background="#65b5e2"
            android:textColor="#ffffff"
            android:textSize="35sp"
            />
        <TextView
            android:id="@+id/activity_main_admin_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="回答管理"
            android:gravity="center"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:background="#f68796"
            android:textColor="#ffffff"
            android:textSize="35sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/activity_main_admin_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="问题管理"
            android:gravity="center"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:background="#79e483"
            android:textColor="#ffffff"
            android:textSize="35sp"
            />
        <TextView
            android:id="@+id/activity_main_admin_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="评论管理"
            android:gravity="center"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:background="#dfdb59"
            android:textColor="#ffffff"
            android:textSize="35sp"
            />
    </LinearLayout>
</LinearLayout>
