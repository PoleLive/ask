<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="0dp"
    >
    <TextView
        android:id="@+id/answer_detail_questionTitle"
        android:text="什么是一个号的回答"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/answer_detail_img_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/head"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/answer_detail_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="haley"
                />
            <TextView
                android:id="@+id/answer_detail_moto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="世界那么大，我想去看看"
                />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/answer_detail_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="不知道说些什么了，ahahahahahaha"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/answer_detail_like_count_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/like"
                />
            <TextView
                android:id="@+id/answer_detail_like_count"
                android:text="500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/answer_detail_collection"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_collections_black_24dp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/answer_detail_txt_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="收藏"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_detail_layout_comment_count"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@mipmap/comment"
                />
            <TextView
                android:id="@+id/answer_detail_txt_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>