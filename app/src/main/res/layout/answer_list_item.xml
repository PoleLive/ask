<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/answer_list_img_head"
            android:layout_margin="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/head"
            />
        <TextView
            android:id="@+id/answer_list_txt_name"
            android:text="haley"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/answer_list_txt_content"
        android:text="泻药，先这么说把，balsblablablabl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_margin="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:id="@+id/answer_list_like_count"
            android:text="71"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赞同-"
            />
        <TextView
            android:id="@+id/answer_list_comment_count"
            android:text="38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论-"
            />
        <TextView
            android:id="@+id/answer_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17个小时前"
            />
    </LinearLayout>
</LinearLayout>